<?xml version="1.0" encoding="UTF-8"?>

<LOCAL_CONFIG>
	<!-- 本地端口配置 -->
	<LOCAL_PORT_CONFIG>
		<PORT name="LAN1">eth0</PORT>
		<PORT name="LAN2">eth1</PORT>
		<PORT name="LAN3">eth2</PORT>
		<PORT name="LAN4">eth3</PORT>
		<PORT name="E1×8">eth5</PORT>
		<PORT name="E1×4">eth4</PORT>
		<PORT name="COM1">/dev/ttyM2</PORT>
		<PORT name="COM2">/dev/ttyM3</PORT>
	</LOCAL_PORT_CONFIG>

	<!-- 本地管理配置 -->
	<LOCAL_MANAGEMENT_CONFIG>
		<INTERFACE>eth2</INTERFACE>
		<IPADDR>192.168.10.200</IPADDR>
		<NETMASK>255.255.255.0</NETMASK>
		<GATEWAY>192.168.10.1</GATEWAY>
	</LOCAL_MANAGEMENT_CONFIG>

	<GLOBAL_CONFIG>
		<!--1(串联); 2(并联)-->
		<TOPO_MODE>2</TOPO_MODE>
		<!--1(二层模式); 2(三层模式); 3(局域网延伸模式); 4(双路由模式)-->
		<NETWORK_MODE>1</NETWORK_MODE>
		<!-- 传输方式，0：主断备传，1：主备同传，2：主备同传(加速)-->
		<FORWARD_MODE>0</FORWARD_MODE>
		<!-- 可靠传输最大缓存空间(字节)-->
		<QUEUE_SIZE>0</QUEUE_SIZE>
		<!-- 隧道模式，0：TOS技术，1：选项技术，2：端口技术-->
		<TUNNEL_MODE>1</TUNNEL_MODE>
	</GLOBAL_CONFIG>
	
	<!-- 本地保护的IP网段 -->
	<LOCAL_HOST_CONFIG name="上海">
		<IP_RANGE name="上海测试">6.8.6.2-6.8.6.252</IP_RANGE>
	</LOCAL_HOST_CONFIG>
	
	<!-- 镜像模块配置 -->
	<MIRROR_CONFIG>
		<INTERFACE>eth0</INTERFACE>
	</MIRROR_CONFIG>
		
	<!-- 主网模块配置 -->
	<MAIN_NET_CONFIG>
		<INTERFACE>eth1</INTERFACE>
		<IPADDR>6.8.6.200</IPADDR>
		<NETMASK>255.255.255.0</NETMASK>
		<GATEWAY>6.8.6.1</GATEWAY>
		
		<!-- 对端探测。默认参数(探测频率1s,探测包数5,切换丢包门限3,恢复丢包门限0,恢复稳定期5倍于探测频率) -->
		<DETECT_SEND_PERIOD>1</DETECT_SEND_PERIOD>
		<DETECT_SEND_QUEUE>5</DETECT_SEND_QUEUE>
		<SWITCH_LOST_THRESHOLD>1</SWITCH_LOST_THRESHOLD>
		<RECOVER_LOST_THRESHOLD>0</RECOVER_LOST_THRESHOLD>
		<RECOVER_STABLE_TIMER>5</RECOVER_STABLE_TIMER>
	</MAIN_NET_CONFIG>

	<!-- 备用网1模块配置 -->
	<BACK_NET1_CONFIG>
		<INTERFACE>eth5</INTERFACE>
		<IPADDR>10.1.1.215</IPADDR>              
		<NETMASK>255.255.255.0</NETMASK>
		<GATEWAY>0.0.0.0</GATEWAY>

		<!-- 对端探测。默认参数(探测频率1s,探测包数5,切换丢包门限3,恢复丢包门限0,恢复稳定期5倍于探测频率) -->
		<DETECT_SEND_PERIOD>1</DETECT_SEND_PERIOD>
		<DETECT_SEND_QUEUE>5</DETECT_SEND_QUEUE>
		<SWITCH_LOST_THRESHOLD>3</SWITCH_LOST_THRESHOLD>
		<RECOVER_LOST_THRESHOLD>0</RECOVER_LOST_THRESHOLD>
		<RECOVER_STABLE_TIMER>5</RECOVER_STABLE_TIMER>
		
		<!-- 业务过滤 ID， 索引《filter_config.xml》 -->
		<FILTER>
			<FILTER_ID operate="1">1</FILTER_ID>
			<FILTER_ID operate="1">2</FILTER_ID>
			<FILTER_ID operate="1">3</FILTER_ID>
		</FILTER>
	</BACK_NET1_CONFIG>

	<!-- 备用网2模块配置 -->
	<BACK_NET2_CONFIG>
		<INTERFACE>eth4</INTERFACE>
		<IPADDR>10.2.1.215</IPADDR>
		<NETMASK>255.255.255.0</NETMASK>
		<GATEWAY>0.0.0.0</GATEWAY>

		<!-- 对端探测。默认参数(探测频率1s,探测包数5,切换丢包门限3,恢复丢包门限0,恢复稳定期5倍于探测频率) -->
		<DETECT_SEND_PERIOD>1</DETECT_SEND_PERIOD>
		<DETECT_SEND_QUEUE>5</DETECT_SEND_QUEUE>
		<SWITCH_LOST_THRESHOLD>3</SWITCH_LOST_THRESHOLD>
		<RECOVER_LOST_THRESHOLD>0</RECOVER_LOST_THRESHOLD>
		<RECOVER_STABLE_TIMER>5</RECOVER_STABLE_TIMER>

		<!-- 业务过滤 ID， 索引《filter_config.xml》 -->
		<FILTER>
			<FILTER_ID operate="1">1</FILTER_ID>
			<FILTER_ID operate="1">2</FILTER_ID>
			<FILTER_ID operate="1">3</FILTER_ID>
		</FILTER>
	</BACK_NET2_CONFIG>
	
	<!-- 备用网模块B3（串口设备）的配置 -->
	<BACK_COM1_CONFIG>
		<!-- 串口的名字 -->
		<SERIAL_NAME>/dev/ttyM2</SERIAL_NAME>
		<!-- 波特率 0:B4800, 1:B9600, 2:B19200, 3:B38400, 4:B57600, 5:B115200, 6:B230400 -->
		<SPEED>115200</SPEED>
		<!-- 数据位 7， 8 -->
		<CS>8</CS>
		<!-- 奇偶校验, 0:奇数校验, 1:偶数校验, 2:无校验 -->
		<PARITYMODE>2</PARITYMODE>
		<!-- 停止位， 1,2 -->
		<STOPBITS>1</STOPBITS>
		
		<!-- 业务过滤 ID， 参考《filter_config.xml》 -->
		<FILTER>
			<FILTER_ID operate="1">1</FILTER_ID>
			<FILTER_ID operate="1">2</FILTER_ID>
			<FILTER_ID operate="1">3</FILTER_ID>
		</FILTER>
	</BACK_COM1_CONFIG>
	
	<!-- 备用网模块B4（串口设备）的配置 -->
	<BACK_COM2_CONFIG>
		<!-- 串口的名字 -->
		<SERIAL_NAME>/dev/ttyM3</SERIAL_NAME>
		<!-- 波特率 0:B4800, 1:B9600, 2:B19200, 3:B38400, 4:B57600, 5:B115200, 6:B230400 -->
		<SPEED>115200</SPEED>
		<!-- 数据位 7， 8 -->
		<CS>8</CS>
		<!-- 奇偶校验, 0:奇数校验, 1:偶数校验, 2:无校验 -->
		<PARITYMODE>2</PARITYMODE>
		<!-- 停止位， 1,2 -->
		<STOPBITS>1</STOPBITS>
		
		<!-- 业务过滤 ID， 参考《filter_config.xml》 -->
		<FILTER>
			<FILTER_ID operate="1">1</FILTER_ID>
			<FILTER_ID operate="1">2</FILTER_ID>
			<FILTER_ID operate="1">3</FILTER_ID>
		</FILTER>
	</BACK_COM2_CONFIG>
</LOCAL_CONFIG>
